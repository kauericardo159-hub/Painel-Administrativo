local player = game.Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

-- Remove versão antiga
if pGui:FindFirstChild("ToggleGui") then pGui.ToggleGui:Destroy() end

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ToggleGui"
ScreenGui.Parent = pGui
ScreenGui.ResetOnSpawn = false

local OpenBtn = Instance.new("TextButton")
OpenBtn.Name = "OpenClose"
OpenBtn.Parent = ScreenGui
OpenBtn.Size = UDim2.new(0, 50, 0, 50)
OpenBtn.Position = UDim2.new(0.02, 0, 0.7, 0) -- Posição elevada para mobile
OpenBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
OpenBtn.Text = "ON"
OpenBtn.TextColor3 = Color3.new(1, 1, 1)
OpenBtn.Font = Enum.Font.GothamBold
OpenBtn.TextSize = 14

local Corner = Instance.new("UICorner", OpenBtn)
Corner.CornerRadius = UDim.new(1, 0) -- Botão redondo

local Stroke = Instance.new("UIStroke", OpenBtn)
Stroke.Thickness = 2
Stroke.Color = Color3.new(1, 1, 1)

-- Função de Clique
OpenBtn.MouseButton1Click:Connect(function()
    local mainPanel = pGui:FindFirstChild("MainControlPanel")
    if mainPanel and mainPanel:FindFirstChild("MainFrame") then
        local frame = mainPanel.MainFrame
        frame.Visible = not frame.Visible
        OpenBtn.Text = frame.Visible and "OFF" or "ON"
        OpenBtn.BackgroundColor3 = frame.Visible and Color3.fromRGB(255, 50, 50) or Color3.fromRGB(0, 170, 255)
    end
end)
