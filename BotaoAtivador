local player = game.Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

-- Referência ao Painel (Espera ele carregar)
local ScreenGui = pGui:WaitForChild("MainControlPanel")
local MainFrame = ScreenGui:WaitForChild("MainFrame")

-- Botão de Ativar
local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Name = "OpenCloseBtn"
ToggleBtn.Parent = ScreenGui -- Mantém na mesma ScreenGui para facilitar
ToggleBtn.Size = UDim2.new(0, 50, 0, 50)
ToggleBtn.Position = UDim2.new(0.02, 0, 0.7, 0) -- Posição mais alta para mobile
ToggleBtn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
ToggleBtn.Text = "MENU"
ToggleBtn.TextColor3 = Color3.new(1, 1, 1)
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.TextSize = 12

local BCorner = Instance.new("UICorner", ToggleBtn)
BCorner.CornerRadius = UDim.new(0, 10)
local BStroke = Instance.new("UIStroke", ToggleBtn)
BStroke.Color = Color3.new(1, 1, 1)

-- Função de Abrir/Fechar
ToggleBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)
