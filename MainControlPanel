-- Nome do Script: MainControlPanel_V6_Ultra
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local player = game.Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

-- Limpeza de inst√¢ncias √≥rf√£s
if pGui:FindFirstChild("MainControlPanel") then pGui.MainControlPanel:Destroy() end

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MainControlPanel"
ScreenGui.Parent = pGui
ScreenGui.ResetOnSpawn = false
ScreenGui.IgnoreGuiInset = true -- Ocupa a tela inteira se necess√°rio

-- --- FRAME PRINCIPAL (CONTAINER) ---
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
MainFrame.Position = UDim2.new(0.5, -400, 0.5, -225)
MainFrame.Size = UDim2.new(0, 800, 0, 450)
MainFrame.ClipsDescendants = true
MainFrame.Visible = false

local UICorner = Instance.new("UICorner", MainFrame)
UICorner.CornerRadius = UDim.new(0, 20)

-- Efeito de Borda Neon (UIStroke)
local MainStroke = Instance.new("UIStroke", MainFrame)
MainStroke.Thickness = 3
MainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
MainStroke.Color = Color3.fromRGB(0, 255, 255)

local MainGradient = Instance.new("UIGradient", MainStroke)
MainGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 150, 255)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 255, 150)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 150, 255))
}

-- --- FUNDO ANIMADO (GRADIENTES E PART√çCULAS) ---
local BgGradient = Instance.new("UIGradient", MainFrame)
BgGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(10, 10, 25)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(25, 10, 35))
}

-- Motor de Part√≠culas Interno
local function SpawnParticle()
    local p = Instance.new("Frame")
    p.Name = "Particle"
    p.Parent = MainFrame
    p.Size = UDim2.new(0, math.random(1, 4), 0, math.random(1, 4))
    p.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    p.BackgroundTransparency = 0.7
    p.Position = UDim2.new(math.random(), 0, 1.1, 0)
    Instance.new("UICorner", p).CornerRadius = UDim.new(1, 0)
    
    local speed = math.random(10, 30) / 10
    task.spawn(function()
        while p.Parent do
            p.Position = p.Position - UDim2.new(0, 0, 0.001 * speed, 0)
            if p.Position.Y.Scale < -0.1 then p.Position = UDim2.new(math.random(), 0, 1.1, 0) end
            RunService.RenderStepped:Wait()
        end
    end)
end

for i = 1, 25 do SpawnParticle() end -- Gera 25 part√≠culas flutuantes

-- --- CABE√áALHO (HEADER) ---
local Header = Instance.new("Frame", MainFrame)
Header.Name = "Header"
Header.Size = UDim2.new(1, 0, 0, 60)
Header.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
Header.BackgroundTransparency = 0.4

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(1, 0, 1, 0)
Title.BackgroundTransparency = 1
Title.Text = "ADMINISTRATIVE PANEL ‚Ä¢ V6 ELITE"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 22
Title.RichText = true

-- --- SCROLLING FRAME (LISTA DE BOT√ïES) ---
local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Name = "ButtonList"
Scroll.Size = UDim2.new(0, 520, 1, -90)
Scroll.Position = UDim2.new(0, 20, 0, 75)
Scroll.BackgroundColor3 = Color3.fromRGB(35, 35, 40) -- Cor Cinza solicitada
Scroll.BackgroundTransparency = 0.5
Scroll.BorderSizePixel = 0
Scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
Scroll.ScrollBarThickness = 4
Scroll.ScrollBarImageColor3 = Color3.fromRGB(100, 100, 100)

local ScrollCorner = Instance.new("UICorner", Scroll)
ScrollCorner.CornerRadius = UDim.new(0, 12)

local ScrollStroke = Instance.new("UIStroke", Scroll)
ScrollStroke.Color = Color3.fromRGB(60, 60, 70)
ScrollStroke.Thickness = 1

local Layout = Instance.new("UIListLayout", Scroll)
Layout.Padding = UDim.new(0, 12)
Layout.SortOrder = Enum.SortOrder.LayoutOrder
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Auto-ajuste de tamanho para bot√µes injetados
Layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    Scroll.CanvasSize = UDim2.new(0, 0, 0, Layout.AbsoluteContentSize.Y + 20)
end)

-- --- PAINEL DE ESTAT√çSTICAS (LATERAL DIREITA) ---
local StatsFrame = Instance.new("Frame", MainFrame)
StatsFrame.Name = "StatsFrame"
StatsFrame.Position = UDim2.new(0, 560, 0, 75)
StatsFrame.Size = UDim2.new(0, 220, 1, -90)
StatsFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
StatsFrame.BackgroundTransparency = 0.3

local StatsCorner = Instance.new("UICorner", StatsFrame)
StatsCorner.CornerRadius = UDim.new(0, 15)

local StatsLayout = Instance.new("UIListLayout", StatsFrame)
StatsLayout.Padding = UDim.new(0, 8)
StatsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function CreateStatLine(icon, labelName)
    local f = Instance.new("Frame", StatsFrame)
    f.Size = UDim2.new(0.9, 0, 0, 35)
    f.BackgroundTransparency = 1
    
    local txt = Instance.new("TextLabel", f)
    txt.Size = UDim2.new(1, 0, 1, 0)
    txt.BackgroundTransparency = 1
    txt.TextColor3 = Color3.fromRGB(200, 200, 200)
    txt.Font = Enum.Font.GothamMedium
    txt.TextSize = 13
    txt.TextXAlignment = Enum.TextXAlignment.Left
    txt.RichText = true
    txt.Name = labelName
    return txt
end

local fpsL = CreateStatLine("‚ö°", "FPSLabel")
local pingL = CreateStatLine("üì°", "PingLabel")
local serverL = CreateStatLine("üÜî", "ServerLabel")
local pCountL = CreateStatLine("üë•", "PlayerLabel")
local timeL = CreateStatLine("‚è±Ô∏è", "TimeLabel")
local ageL = CreateStatLine("üìÖ", "AgeLabel")

-- --- L√ìGICA DE ATUALIZA√á√ÉO ---
local startTime = tick()
task.spawn(function()
    while true do
        local fps = math.floor(workspace:GetRealPhysicsFPS())
        local ping = math.floor(game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue())
        local serverAge = math.floor(workspace.DistributedGameTime)
        local sessionTime = math.floor(tick() - startTime)
        
        fpsL.Text = "‚ö° FPS: <font color='#00FF00'>" .. fps .. "</font>"
        pingL.Text = "üì° PING: <font color='#FFFF00'>" .. ping .. "ms</font>"
        serverL.Text = "üÜî ID: <font color='#00AAFF'>" .. (game.JobId:sub(1,6) or "Studio") .. "</font>"
        pCountL.Text = "üë• PLAYERS: <font color='#FFAAFF'>" .. #game.Players:GetPlayers() .. "/" .. game.Players.MaxPlayers .. "</font>"
        timeL.Text = "‚è±Ô∏è SESS√ÉO: <font color='#FFFFFF'>" .. sessionTime .. "s</font>"
        ageL.Text = "üìÖ SV AGE: <font color='#FF5555'>" .. serverAge .. "s</font>"
        
        MainGradient.Rotation = (MainGradient.Rotation + 2) % 360 -- Anima o brilho da borda
        task.wait(0.5)
    end
end)

-- --- ANIMA√á√ÉO DE ABRIR/FECHAR ---
MainFrame:GetPropertyChangedSignal("Visible"):Connect(function()
    if MainFrame.Visible then
        MainFrame.Size = UDim2.new(0, 0, 0, 0)
        MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
        local tween = TweenService:Create(MainFrame, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
            Size = UDim2.new(0, 800, 0, 450),
            Position = UDim2.new(0.5, -400, 0.5, -225)
        })
        tween:Play()
    end
end)
