-- Nome: MainControlPanel_V5
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local player = game.Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

-- Limpeza de vers√µes anteriores
if pGui:FindFirstChild("MainControlPanel") then pGui.MainControlPanel:Destroy() end

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MainControlPanel"
ScreenGui.Parent = pGui
ScreenGui.ResetOnSpawn = false

-- --- DESIGN DO PAINEL ---
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 15)
MainFrame.Position = UDim2.new(0.5, -350, 0.5, -200)
MainFrame.Size = UDim2.new(0, 700, 0, 400)
MainFrame.ClipsDescendants = true
MainFrame.Visible = false

local UICorner = Instance.new("UICorner", MainFrame)
UICorner.CornerRadius = UDim.new(0, 20)

local UIStroke = Instance.new("UIStroke", MainFrame)
UIStroke.Thickness = 3
UIStroke.Color = Color3.fromRGB(0, 170, 255)
UIStroke.Transparency = 0.5

-- --- FUNDO ANIMADO (PART√çCULAS) ---
local function CreateParticle()
    local p = Instance.new("Frame")
    p.Size = UDim2.new(0, math.random(2, 5), 0, math.random(2, 5))
    p.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    p.BackgroundTransparency = 0.6
    p.Position = UDim2.new(math.random(), 0, 1.1, 0)
    p.Parent = MainFrame
    Instance.new("UICorner", p).CornerRadius = UDim.new(1, 0)
    
    local speed = math.random(5, 10)
    task.spawn(function()
        while p.Parent do
            p.Position = p.Position - UDim2.new(0, 0, 0.002 * speed, 0)
            if p.Position.Y.Scale < -0.1 then p.Position = UDim2.new(math.random(), 0, 1.1, 0) end
            RunService.RenderStepped:Wait()
        end
    end)
end
for i = 1, 15 do CreateParticle() end

-- --- ESTRUTURA INTERNA ---
local Header = Instance.new("Frame", MainFrame)
Header.Name = "Header"
Header.Size = UDim2.new(1, 0, 0, 50)
Header.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
Header.BackgroundTransparency = 0.3

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(1, 0, 1, 0)
Title.Text = "ADMIN HUB ‚Ä¢ PREMIUM V5"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18
Title.BackgroundTransparency = 1

-- LISTA DE BOT√ïES (O CORA√á√ÉO DO SCRIPT)
local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Name = "ButtonList"
Scroll.Size = UDim2.new(0, 450, 1, -70)
Scroll.Position = UDim2.new(0, 15, 0, 60)
Scroll.BackgroundTransparency = 1
Scroll.CanvasSize = UDim2.new(0, 0, 0, 0) -- Auto-ajuste
Scroll.ScrollBarThickness = 2
Scroll.ScrollingDirection = Enum.ScrollingDirection.Y

local Layout = Instance.new("UIListLayout", Scroll)
Layout.Padding = UDim.new(0, 10)
Layout.SortOrder = Enum.SortOrder.LayoutOrder

-- FIX: For√ßar atualiza√ß√£o do CanvasSize quando bot√µes entram
Layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    Scroll.CanvasSize = UDim2.new(0, 0, 0, Layout.AbsoluteContentSize.Y + 20)
end)

-- --- PAINEL LATERAL (STATS) ---
local StatsFrame = Instance.new("Frame", MainFrame)
StatsFrame.Position = UDim2.new(1, -215, 0, 60)
StatsFrame.Size = UDim2.new(0, 200, 1, -75)
StatsFrame.BackgroundColor3 = Color3.new(0,0,0)
StatsFrame.BackgroundTransparency = 0.8
Instance.new("UICorner", StatsFrame)

local function AddStat(name)
    local l = Instance.new("TextLabel", StatsFrame)
    l.Size = UDim2.new(1, -20, 0, 30)
    l.BackgroundTransparency = 1
    l.TextColor3 = Color3.new(0.8, 0.8, 0.8)
    l.Font = Enum.Font.GothamBold
    l.TextSize = 13
    l.TextXAlignment = Enum.TextXAlignment.Left
    l.Name = name
    return l
end

local fpsL = AddStat("FPS")
local pingL = AddStat("Ping")
local playL = AddStat("Players")

Instance.new("UIListLayout", StatsFrame).Padding = UDim.new(0, 5)

-- Loop de Stats
task.spawn(function()
    while task.wait(1) do
        fpsL.Text = " ‚ö° FPS: " .. math.floor(workspace:GetRealPhysicsFPS())
        pingL.Text = " üì° PING: " .. math.floor(game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue()) .. "ms"
        playL.Text = " üë• PLAYERS: " .. #game.Players:GetPlayers()
    end
end)

-- --- ANIMA√á√ÉO DE ABRIR ---
MainFrame:GetPropertyChangedSignal("Visible"):Connect(function()
    if MainFrame.Visible then
        MainFrame.Size = UDim2.new(0, 0, 0, 0)
        TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back), {Size = UDim2.new(0, 700, 0, 400)}):Play()
    end
end)
