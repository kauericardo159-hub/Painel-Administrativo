-- Nome: MainControlPanel_V6
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local player = game.Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

-- Limpeza de seguran√ßa
if pGui:FindFirstChild("MainControlPanel") then pGui.MainControlPanel:Destroy() end

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MainControlPanel"
ScreenGui.Parent = pGui
ScreenGui.ResetOnSpawn = false

-- --- FRAME PRINCIPAL ---
local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
MainFrame.Position = UDim2.new(0.5, -350, 0.5, -200)
MainFrame.Size = UDim2.new(0, 700, 0, 400)
MainFrame.ClipsDescendants = true
MainFrame.Visible = false

local UICorner = Instance.new("UICorner", MainFrame)
UICorner.CornerRadius = UDim.new(0, 15)

-- Borda Estilizada (UIStroke)
local MainStroke = Instance.new("UIStroke", MainFrame)
MainStroke.Thickness = 3
MainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
local StrokeGradient = Instance.new("UIGradient", MainStroke)
StrokeGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 255)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(255, 0, 255)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 255, 255))
}

-- --- FUNDO ANIMADO (GRADIENTE E ESTRELAS) ---
local BgGradient = Instance.new("UIGradient", MainFrame)
BgGradient.Color = ColorSequence.new(Color3.fromRGB(10, 10, 15), Color3.fromRGB(30, 30, 45))
BgGradient.Rotation = 45

task.spawn(function()
    while true do
        for i = 0, 360, 1 do
            BgGradient.Rotation = i
            StrokeGradient.Rotation = -i -- Borda gira ao contr√°rio
            task.wait(0.05)
        end
    end
end)

-- --- CABE√áALHO ---
local Header = Instance.new("Frame", MainFrame)
Header.Size = UDim2.new(1, 0, 0, 50)
Header.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Header.BackgroundTransparency = 0.4

local Title = Instance.new("TextLabel", Header)
Title.Size = UDim2.new(1, 0, 1, 0)
Title.BackgroundTransparency = 1
Title.Text = "SYSTEM ADMINISTRATION ‚Ä¢ V6"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 20

-- --- LISTA DE BOT√ïES (SCROLLINGFRAME CINZA) ---
local Scroll = Instance.new("ScrollingFrame", MainFrame)
Scroll.Name = "ButtonList"
Scroll.Size = UDim2.new(0, 460, 1, -80)
Scroll.Position = UDim2.new(0, 15, 0, 65)
Scroll.BackgroundColor3 = Color3.fromRGB(35, 35, 40) -- Cinza fosco solicitado
Scroll.BackgroundTransparency = 0.2
Scroll.BorderSizePixel = 0
Scroll.ScrollBarThickness = 4
Scroll.ScrollBarImageColor3 = Color3.fromRGB(0, 255, 255)
Scroll.CanvasSize = UDim2.new(0, 0, 0, 0)

Instance.new("UICorner", Scroll).CornerRadius = UDim.new(0, 10)
local ScrollStroke = Instance.new("UIStroke", Scroll)
ScrollStroke.Color = Color3.fromRGB(60, 60, 70)

local Layout = Instance.new("UIListLayout", Scroll)
Layout.Padding = UDim.new(0, 8)
Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
Layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    Scroll.CanvasSize = UDim2.new(0, 0, 0, Layout.AbsoluteContentSize.Y + 20)
end)

-- --- PAINEL DE ESTAT√çSTICAS ---
local StatsFrame = Instance.new("Frame", MainFrame)
StatsFrame.Position = UDim2.new(1, -210, 0, 65)
StatsFrame.Size = UDim2.new(0, 195, 1, -80)
StatsFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
StatsFrame.BackgroundTransparency = 0.3
Instance.new("UICorner", StatsFrame)
Instance.new("UIStroke", StatsFrame).Color = Color3.fromRGB(0, 170, 255)

local function CreateStat(name)
    local l = Instance.new("TextLabel", StatsFrame)
    l.Size = UDim2.new(1, -20, 0, 35)
    l.BackgroundTransparency = 1
    l.TextColor3 = Color3.fromRGB(200, 200, 200)
    l.Font = Enum.Font.GothamMedium
    l.TextSize = 13
    l.TextXAlignment = Enum.TextXAlignment.Left
    l.RichText = true
    return l
end

local fpsL = CreateStat("FPS")
local pingL = CreateStat("Ping")
local serverL = CreateStat("Server")
local playersL = CreateStat("Players")
local timeL = CreateStat("Time")
local ageL = CreateStat("Age")
Instance.new("UIListLayout", StatsFrame).Padding = UDim.new(0, 5)

-- --- L√ìGICA DE ATUALIZA√á√ÉO ---
local startTime = tick()
task.spawn(function()
    while task.wait(0.5) do
        local fps = math.floor(1/RunService.RenderStepped:Wait())
        local ping = math.floor(game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue())
        
        fpsL.Text = " <font color='#00FFFF'>‚ö° FPS:</font> "..fps
        pingL.Text = " <font color='#00FF00'>üì° PING:</font> "..ping.."ms"
        serverL.Text = " <font color='#FFA500'>üÜî SV:</font> "..game.JobId:sub(1,4)
        playersL.Text = " <font color='#FF00FF'>üë• PLR:</font> "..#game.Players:GetPlayers().."/"..game.Players.MaxPlayers
        timeL.Text = " <font color='#FFFF00'>‚è±Ô∏è SES:</font> "..math.floor(tick()-startTime).."s"
        ageL.Text = " <font color='#FF4500'>üìÖ AGE:</font> "..math.floor(workspace.DistributedGameTime).."s"
    end
end)

-- --- ANIMA√á√ÉO DE ABRIR ---
MainFrame:GetPropertyChangedSignal("Visible"):Connect(function()
    if MainFrame.Visible then
        MainFrame.Size = UDim2.new(0, 0, 0, 0)
        MainFrame.BackgroundTransparency = 1
        TweenService:Create(MainFrame, TweenInfo.new(0.6, Enum.EasingStyle.Quart, Enum.EasingDirection.Out), {
            Size = UDim2.new(0, 700, 0, 400),
            BackgroundTransparency = 0
        }):Play()
    end
end)
