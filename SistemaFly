-- Nome do Script: SistemaFly
local player = game.Players.LocalPlayer
local mouse = player:GetMouse()

local flying = false
local speed = 50 -- Velocidade padrão
local bv, bg

function toggleFly()
    flying = not flying
    local char = player.Character
    if flying then
        -- Criar forças de voo
        bg = Instance.new("BodyGyro", char.HumanoidRootPart)
        bg.P = 9e4
        bg.maxTorque = Vector3.new(9e4, 9e4, 9e4)
        bg.cframe = char.HumanoidRootPart.CFrame
        
        bv = Instance.new("BodyVelocity", char.HumanoidRootPart)
        bv.velocity = Vector3.new(0, 0.1, 0)
        bv.maxForce = Vector3.new(9e4, 9e4, 9e4)
        
        char.Humanoid.PlatformStand = true
        
        -- Loop de movimento
        task.spawn(function()
            while flying do
                bv.velocity = mouse.Hit.lookVector * speed
                bg.cframe = CFrame.new(char.HumanoidRootPart.Position, mouse.Hit.p)
                task.wait()
            end
        end)
    else
        if bg then bg:Destroy() end
        if bv then bv:Destroy() end
        char.Humanoid.PlatformStand = false
    end
end

-- Exemplo de uso para o botão:
-- Botão de Ativar: toggleFly()
-- Para mudar velocidade: speed = 100
