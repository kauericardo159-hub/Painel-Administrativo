-- Nome do Script: FlyInjetor
local player = game.Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")
local MainGui = pGui:WaitForChild("MainControlPanel")
local Scroll = MainGui.MainFrame.ButtonList

-- Configurações do Fly
local flying = false
local speed = 50
local bv, bg

local function toggleFly(btn)
    flying = not flying
    local char = player.Character
    if flying then
        btn.BackgroundColor3 = Color3.fromRGB(0, 170, 0) -- Verde (Ativado)
        bg = Instance.new("BodyGyro", char.HumanoidRootPart)
        bg.P = 9e4
        bg.maxTorque = Vector3.new(9e4, 9e4, 9e4)
        bg.cframe = char.HumanoidRootPart.CFrame
        bv = Instance.new("BodyVelocity", char.HumanoidRootPart)
        bv.velocity = Vector3.new(0, 0.1, 0)
        bv.maxForce = Vector3.new(9e4, 9e4, 9e4)
        char.Humanoid.PlatformStand = true
        task.spawn(function()
            while flying do
                bv.velocity = workspace.CurrentCamera.CFrame.LookVector * speed
                bg.cframe = workspace.CurrentCamera.CFrame
                task.wait()
            end
        end)
    else
        btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45) -- Cinza (Desativado)
        if bg then bg:Destroy() end
        if bv then bv:Destroy() end
        char.Humanoid.PlatformStand = false
    end
end

-- Criar Botão no Painel
local FlyBtn = Instance.new("TextButton")
FlyBtn.Name = "FlyButton"
FlyBtn.Parent = Scroll
FlyBtn.Size = UDim2.new(1, 0, 0, 40)
FlyBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
FlyBtn.Text = "1 | ATIVAR/DESATIVAR FLY"
FlyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
FlyBtn.Font = Enum.Font.GothamBold
FlyBtn.TextSize = 14

Instance.new("UICorner", FlyBtn).CornerRadius = UDim.new(0, 8)

FlyBtn.MouseButton1Click:Connect(function()
    toggleFly(FlyBtn)
end)
