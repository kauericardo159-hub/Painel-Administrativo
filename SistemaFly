-- Nome do Script: Fly_Module_Mobile_V4
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local camera = workspace.CurrentCamera
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

-- 1. LOCALIZAÇÃO DO PAINEL (COM ESPERA ROBUSTA)
local pGui = player:WaitForChild("PlayerGui")
local mainGui = nil

-- Loop para garantir que o script encontre o painel injetado via GitHub
for i = 1, 20 do 
    mainGui = pGui:FindFirstChild("MainControlPanel")
    if mainGui then break end
    task.wait(0.5)
end

if not mainGui then 
    warn("ERRO: MainControlPanel não encontrado após 10 segundos.")
    return 
end

local scroll = mainGui.MainFrame:WaitForChild("ButtonList")

-- 2. VARIÁVEIS DE ESTADO DO FLY
local flying = false
local flySpeed = 16
local bv, bg

-- --- NOTIFICAÇÃO PREMIUM ---
local function Notify(title, text, color)
    local notifyFrame = Instance.new("Frame")
    notifyFrame.Size = UDim2.new(0, 240, 0, 70)
    notifyFrame.Position = UDim2.new(0.5, -120, -0.2, 0) -- Começa fora da tela
    notifyFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 15)
    notifyFrame.Parent = mainGui
    notifyFrame.ZIndex = 10
    
    local corner = Instance.new("UICorner", notifyFrame)
    corner.CornerRadius = UDim.new(0, 12)
    
    local stroke = Instance.new("UIStroke", notifyFrame)
    stroke.Color = color
    stroke.Thickness = 2
    
    local content = Instance.new("TextLabel", notifyFrame)
    content.Size = UDim2.new(1, -20, 1, -10)
    content.Position = UDim2.new(0, 10, 0, 5)
    content.BackgroundTransparency = 1
    content.Text = "<b>" .. title .. "</b>\n" .. text
    content.TextColor3 = Color3.new(1,1,1)
    content.Font = Enum.Font.GothamBold
    content.TextSize = 14
    content.RichText = true

    -- Animação de entrada e saída
    notifyFrame:TweenPosition(UDim2.new(0.5, -120, 0.05, 0), "Out", "Back", 0.5)
    task.delay(2.5, function()
        notifyFrame:TweenPosition(UDim2.new(0.5, -120, -0.2, 0), "In", "Quad", 0.5)
        task.wait(0.6)
        notifyFrame:Destroy()
    end)
end

-- 3. ESTRUTURA DO BOTÃO (ALINHADO COM O DESIGN V4)
local Container = Instance.new("Frame")
Container.Name = "Fly_Entry"
Container.Parent = scroll
Container.Size = UDim2.new(1, -10, 0, 55) -- Altura ideal para a lista
Container.BackgroundTransparency = 1

local UIList = Instance.new("UIListLayout", Container)
UIList.FillDirection = Enum.FillDirection.Horizontal
UIList.Padding = UDim.new(0, 8)
UIList.VerticalAlignment = Enum.VerticalAlignment.Center

-- Input de Velocidade com Estilo Dark
local SpeedInput = Instance.new("TextBox")
SpeedInput.Name = "SpeedInput"
SpeedInput.Size = UDim2.new(0, 80, 0, 45)
SpeedInput.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
SpeedInput.Text = "50"
SpeedInput.PlaceholderText = "Vel."
SpeedInput.TextColor3 = Color3.fromRGB(0, 255, 150)
SpeedInput.Font = Enum.Font.GothamBold
SpeedInput.TextSize = 18
Instance.new("UICorner", SpeedInput).CornerRadius = UDim.new(0, 10)
local InputStroke = Instance.new("UIStroke", SpeedInput)
InputStroke.Color = Color3.fromRGB(60, 60, 80)

-- Botão de Ativação Principal
local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Name = "ToggleFly"
ToggleBtn.Size = UDim2.new(1, -90, 0, 45)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 55)
ToggleBtn.Text = "1 | FLY: INATIVO"
ToggleBtn.TextColor3 = Color3.new(1, 1, 1)
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.TextSize = 15
Instance.new("UICorner", ToggleBtn).CornerRadius = UDim.new(0, 10)

-- 4. LÓGICA DE MOVIMENTAÇÃO (FLY MOBILE ELITE)
local function startFly()
    character = player.Character
    if not character or not character:FindFirstChild("HumanoidRootPart") then return end
    
    bg = Instance.new("BodyGyro", character.HumanoidRootPart)
    bg.maxTorque = Vector3.new(9e9, 9e9, 9e9)
    bg.P = 15000 -- Estabilização forte
    
    bv = Instance.new("BodyVelocity", character.HumanoidRootPart)
    bv.maxForce = Vector3.new(9e9, 9e9, 9e9)
    bv.velocity = Vector3.new(0, 0.1, 0)
    
    character.Humanoid.PlatformStand = true
    
    task.spawn(function()
        while flying and character and character:FindFirstChild("HumanoidRootPart") do
            local moveDir = character.Humanoid.MoveDirection -- Lê o analógico do Mobile
            
            if moveDir.Magnitude > 0 then
                -- O segredo para subir/descer: transformamos o movimento relativo à câmera
                -- Se o jogador olhar para cima, o Vector3 aponta para cima no espaço do mundo
                local camCFrame = camera.CFrame
                local lookVec = camCFrame.LookVector
                local rightVec = camCFrame.RightVector
                
                -- Cálculo de direção 3D completa
                local finalDir = (lookVec * (moveDir.Z * -1)) + (rightVec * moveDir.X)
                bv.velocity = finalDir.Unit * flySpeed
            else
                bv.velocity = Vector3.new(0, 0.1, 0) -- Flutuar parado
            end
            
            bg.cframe = camera.CFrame
            RunService.RenderStepped:Wait()
        end
        -- Limpeza ao sair do loop
        if bg then bg:Destroy() end
        if bv then bv:Destroy() end
        if character:FindFirstChild("Humanoid") then
            character.Humanoid.PlatformStand = false
        end
    end)
end

-- 5. EVENTO DE CLIQUE
ToggleBtn.MouseButton1Click:Connect(function()
    flying = not flying
    flySpeed = tonumber(SpeedInput.Text) or 50
    
    if flying then
        ToggleBtn.Text = "1 | FLY: ATIVO"
        TweenService:Create(ToggleBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 180, 100)}):Play()
        Notify("FLY ATIVADO", "Controle pelo Analógico\nVelocidade: " .. flySpeed, Color3.fromRGB(0, 255, 120))
        startFly()
    else
        ToggleBtn.Text = "1 | FLY: INATIVO"
        TweenService:Create(ToggleBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(45, 45, 55)}):Play()
        Notify("FLY DESATIVADO", "Modo Caminhada Restaurado", Color3.fromRGB(255, 50, 50))
    end
end)

-- Sincronizar com o ajuste automático do Canvas do MainControlPanel
scroll.CanvasSize = UDim2.new(0, 0, 0, scroll.UIListLayout.AbsoluteContentSize.Y)
