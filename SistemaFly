-- Nome: Fly_Module
local player = game.Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

-- Espera o painel carregar para n찾o dar erro de "not found"
local ScreenGui = pGui:WaitForChild("MainControlPanel", 10)
if not ScreenGui then warn("Painel n찾o encontrado!") return end

local Scroll = ScreenGui.MainFrame:WaitForChild("ButtonList")

local flying = false
local speed = 50
local bv, bg

-- Criar Estrutura do Bot찾o Estiloso
local Container = Instance.new("Frame")
Container.Name = "FlyContainer"
Container.Parent = Scroll
Container.Size = UDim2.new(1, 0, 0, 45)
Container.BackgroundTransparency = 1

local Button = Instance.new("TextButton")
Button.Parent = Container
Button.Size = UDim2.new(1, 0, 1, 0)
Button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
Button.Text = "1 | ATIVAR/DESATIVAR FLY" -- Formato solicitado
Button.TextColor3 = Color3.new(1, 1, 1)
Button.Font = Enum.Font.GothamBold
Button.TextSize = 16

Instance.new("UICorner", Button).CornerRadius = UDim.new(0, 8)

-- L처gica do Fly
Button.MouseButton1Click:Connect(function()
    flying = not flying
    local char = player.Character
    if flying then
        Button.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
        bg = Instance.new("BodyGyro", char.HumanoidRootPart)
        bg.maxTorque = Vector3.new(9e4, 9e4, 9e4)
        bv = Instance.new("BodyVelocity", char.HumanoidRootPart)
        bv.maxForce = Vector3.new(9e4, 9e4, 9e4)
        char.Humanoid.PlatformStand = true
        task.spawn(function()
            while flying do
                bv.velocity = workspace.CurrentCamera.CFrame.LookVector * speed
                bg.cframe = workspace.CurrentCamera.CFrame
                task.wait()
            end
        end)
    else
        Button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
        if bg then bg:Destroy() end
        if bv then bv:Destroy() end
        char.Humanoid.PlatformStand = false
    end
end)
